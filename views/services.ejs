<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pet Marketplace</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background: #1c1c28;
      color: #f1f1f1;
    }

    header {
      background: #282846;
      color: #fff;
      padding: 1.2rem;
      text-align: center;
      font-size: 1.8rem;
      font-weight: bold;
      border-bottom: 2px solid #444;
    }

    .container {
      display: flex;
      gap: 20px;
      width: 95%;
      max-width: 1300px;
      margin: 20px auto;
    }

    .left-panel { flex: 3; }
    .search-bar { margin-bottom: 20px; }

    .search-bar input {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 8px;
      background: #2f2f4f;
      color: #f1f1f1;
      outline: none;
    }

    .pet-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .card {
      background: #2b2b44;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.5);
      overflow: hidden;
      transition: transform 0.2s;
    }
    .card:hover { transform: translateY(-5px); }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-body { padding: 15px; }
    .card-body h3 { margin-bottom: 8px; color: #ffda79; }

    .btn {
      display: inline-block;
      padding: 8px 15px;
      background: #ff6b81;
      color: white;
      border-radius: 6px;
      text-decoration: none;
      cursor: pointer;
      transition: background 0.3s;
    }
    .btn:hover { background: #e84118; }

    .right-panel {
      flex: 1;
      background: #222236;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.5);
      height: fit-content;
      position: sticky;
      top: 20px;
    }
    .right-panel h2 {
      margin-bottom: 15px;
      color: #ffda79;
      text-align: center;
    }
    .form-group { margin-bottom: 15px; }
    .form-group label { display: block; margin-bottom: 5px; font-weight: bold; }
    .form-group input, .form-group select {
      width: 100%;
      padding: 10px;
      border-radius: 6px;
      border: none;
      background: #33334f;
      color: #f1f1f1;
    }
    .form-group input::placeholder { color: #aaa; }

    footer {
      margin-top: 40px;
      padding: 15px;
      background: #282846;
      color: white;
      text-align: center;
      border-top: 2px solid #444;
    }
  </style>
</head>
<body>
  <header>üêæ Pet Marketplace - Buy & Sell Dogs & Cats üêæ</header>

  <div class="container">
    <!-- Left: Pet Listings -->
    <div class="left-panel">
      <div class="search-bar">
        <input type="text" id="searchInput" placeholder="üîç Search pets by name or type...">
      </div>

      <div class="pet-grid" id="petGrid">
        <!-- Dogs -->
        <div class="card" data-type="dog" data-name="Buddy">
          <img src="https://images.pexels.com/photos/1805164/pexels-photo-1805164.jpeg" alt="Dog">
          <div class="card-body">
            <h3>Buddy</h3>
            <p>Type: Dog</p>
            <p>Price: ‚Çπ5000</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="dog" data-name="Rocky">
          <img src="https://images.pexels.com/photos/4587994/pexels-photo-4587994.jpeg" alt="Dog">
          <div class="card-body">
            <h3>Rocky</h3>
            <p>Type: Dog</p>
            <p>Price: ‚Çπ7000</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="dog" data-name="Max">
          <img src="https://images.pexels.com/photos/1108099/pexels-photo-1108099.jpeg" alt="Dog">
          <div class="card-body">
            <h3>Max</h3>
            <p>Type: Dog</p>
            <p>Price: ‚Çπ6000</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="dog" data-name="Charlie">
          <img src="https://images.pexels.com/photos/257577/pexels-photo-257577.jpeg" alt="Dog">
          <div class="card-body">
            <h3>Charlie</h3>
            <p>Type: Dog</p>
            <p>Price: ‚Çπ5500</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <!-- Cats -->
        <div class="card" data-type="cat" data-name="Mittens">
          <img src="https://images.pexels.com/photos/45201/kitty-cat-kitten-pet-45201.jpeg" alt="Cat">
          <div class="card-body">
            <h3>Mittens</h3>
            <p>Type: Cat</p>
            <p>Price: ‚Çπ3500</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="cat" data-name="Luna">
          <img src="https://images.pexels.com/photos/1276553/pexels-photo-1276553.jpeg" alt="Cat">
          <div class="card-body">
            <h3>Luna</h3>
            <p>Type: Cat</p>
            <p>Price: ‚Çπ4000</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="cat" data-name="Simba">
          <img src="https://images.pexels.com/photos/20787/pexels-photo.jpg" alt="Cat">
          <div class="card-body">
            <h3>Simba</h3>
            <p>Type: Cat</p>
            <p>Price: ‚Çπ3800</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>

        <div class="card" data-type="cat" data-name="Chloe">
          <img src="https://images.pexels.com/photos/137049/pexels-photo-137049.jpeg" alt="Cat">
          <div class="card-body">
            <h3>Chloe</h3>
            <p>Type: Cat</p>
            <p>Price: ‚Çπ4200</p>
            <a href="#" class="btn">Buy Now</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Right: Add Pet Form -->
    <div class="right-panel">
      <h2>‚ûï Add Your Pet</h2>
      <form id="petForm">
        <div class="form-group">
          <label for="petName">Pet Name</label>
          <input type="text" id="petName" required>
        </div>
        <div class="form-group">
          <label for="petType">Pet Type</label>
          <select id="petType" required>
            <option value="dog">Dog</option>
            <option value="cat">Cat</option>
          </select>
        </div>
        <div class="form-group">
          <label for="petPrice">Price (‚Çπ)</label>
          <input type="number" id="petPrice" required>
        </div>
        <div class="form-group">
          <label for="petImage">Image URL</label>
          <input type="url" id="petImage" placeholder="https://example.com/pet.jpg" required>
        </div>
        <button type="submit" class="btn" style="width:100%;">Add Pet</button>
      </form>
    </div>
  </div>

  <footer>¬© 2025 Pet Marketplace | Made with ‚ù§Ô∏è</footer>

  <script>
    const petForm = document.getElementById('petForm');
    const petGrid = document.getElementById('petGrid');
    const searchInput = document.getElementById('searchInput');

    // Add new pet
    petForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const name = document.getElementById('petName').value;
      const type = document.getElementById('petType').value;
      const price = document.getElementById('petPrice').value;
      const image = document.getElementById('petImage').value;

      const newCard = document.createElement('div');
      newCard.classList.add('card');
      newCard.setAttribute('data-type', type);
      newCard.setAttribute('data-name', name.toLowerCase());

      newCard.innerHTML = `
        <img src="${image}" alt="${type}">
        <div class="card-body">
          <h3>${name}</h3>
          <p>Type: ${type.charAt(0).toUpperCase() + type.slice(1)}</p>
          <p>Price: ‚Çπ${price}</p>
          <a href="#" class="btn">Buy Now</a>
        </div>
      `;
      petGrid.appendChild(newCard);

      petForm.reset();
    });

    // Search pets
    searchInput.addEventListener('input', () => {
      const filter = searchInput.value.toLowerCase();
      const cards = petGrid.getElementsByClassName('card');
      Array.from(cards).forEach(card => {
        const name = card.getAttribute('data-name');
        const type = card.getAttribute('data-type');
        if (name.includes(filter) || type.includes(filter)) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    });
  </script>
</body>
</html>
